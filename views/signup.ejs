<% include header %>
<% include nav %>
<!-- 注册页内容 -->
<div id="signup-main">
  <div class="container" >
    <div class="row">
      <div class="col-sm-8 sign-col">
        <ol class="breadcrumb">
          <li><a href="/">主页</a></li>
          <li class="active">注册</li>
        </ol>
        <!-- 注册表单 -->
        <form class="form-horizontal" method="post">
          <% if(error){ %>
            <p class="text-danger" style="text-align: center;"><%= error %></p>
          <% } %>
          <% if(success){ %>
            <p class="text-success" style="text-align: center;"><%= success %></p>
          <% } %>
            <div class="form-group">
                <label for="nickname" class="col-sm-3 control-label">昵称
                </label>
                <div class="col-sm-6">
                <input type="text" class="form-control" placeholder="昵称" 
                 id="nickname" name="name" required>
                </div>   
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                     <label class="radio-inline">
                        <input type="radio" name="gender" value="male" checked> 男
                     </label>
                     <label class="radio-inline">
                        <input type="radio" name="gender" value="female"> 女
                     </label>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">密码
                </label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" placeholder="密码" 
                    id="password" name="password" required>
                </div>
            </div>
            <div class="form-group">
                <label for="re_password" class="col-sm-3 control-label">重复密码</label>
                <div class="col-sm-6 col-sm-8">
                    <input type="password" class="form-control" placeholder="密码" 
                    id="re_password" name="re_password" required>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">邮箱
                </label>
                <div class="col-sm-6">
                    <input type="email" class="form-control" placeholder="获取gravatar头像" 
                    id="email" name="email" required>
                </div>
            </div>
            <div class="form-group">
                <label for="signnature" class="col-sm-3 control-label">个性签名
                </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="个性签名" 
                    id="signnature" name="signature" required>
                </div>
            </div>
            <div class="form-group sign-form">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary">注册</button>
                </div>
            </div>
        </form>
      </div>
      <!-- 友情导航 -->
      <div class="col-sm-4 hidden-xs" >
         <div class="well well-sm">
            <p>在这里你可以:</p>
            <ul>
                <li>1</li>
                <li>2</li>
                <li>3</li>
            </ul>
         </div>
      </div>
    </div>
  </div>
</div>
<% include footer %>
<% include header %>
<% include nav	%>
<!-- 发布页内容 -->
<div id=" create-main">
  <div class="container" >
    <div class="row">
      <div class="col-sm-8" style="background-color: #fff;padding: 0">
        <ol class="breadcrumb">
          <li><a href="/">主页</a></li>
          <li class="active">发布话题</li>
        </ol>
        <!-- 发布话题 -->
        <form class="form-horizontal" method="post">
        <div class="form-group">
          <label for="selectTab" class="control-label col-sm-2">选择版块:</label>
          <div class="col-sm-4">
            <select name="tab" id="selectTab" name="tab" class="form-control">
                <%	community.tabs.forEach(function (tab){ %>
                  <option><%= tab %></option>
                <% }) %>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="topic" class="control-label col-sm-2">标题:</label>
          <div class="col-sm-6">
            <input type="text" id="topic" name="title" class="form-control" placeholder="标题字数10字以上" required >
          </div>
        </div>
        <div class="col-sm-12">
          <textarea name="content" class="form-control" rows="20">
          </textarea>
        </div>   
          <div class="col-sm-offset-10 col-sm-2" style="margin-top: 1em">
            <button type="submit" class="btn btn-primary">提交</button>
          </div>
        </form>
      </div>
      <div class="col-sm-4 hidden-xs" >
         <div class="well well-sm">
            <p>在这里你可以:</p>
            <ul>
                <li>1</li>
                <li>2</li>
                <li>3</li>
            </ul>
         </div>
      </div>
    </div>
  </div>
</div>

<% include footer %>